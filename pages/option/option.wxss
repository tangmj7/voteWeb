  .add_page{
    background: #fff;
  }
  .add_box{
    display: flex;
    flex-direction: column;
    padding: 0 10px 0 10px;
  
  }
  .navbar{
    background: #fff;
    font-size: 12px;
    height: 40px;
    /* flex: none; */
    display: flex;
  }
  
  .navbar .item{
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 40px;
  }
  .navbar .item.active{
    color: #1d953f;
  }
  .navbar .item.active:after{
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: #1d953f;
  }


